<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >

  <View
    android:id="@+id/bg_top"
    android:layout_width="match_parent"
    android:layout_height="385dp"
    android:background="#f5f5f5"
    app:layout_constraintTop_toTopOf="parent"
    />

  <ImageView
    android:layout_width="match_parent"
    android:layout_height="385dp"
    android:scaleType="centerCrop"
    app:layout_constraintTop_toTopOf="parent"
    android:src="@drawable/bg_signup"/>

  <ImageView
    android:layout_width="140dp"
    android:layout_height="120dp"
    android:layout_marginTop="133dp"
    android:src="@drawable/ic_couple"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="23dp"
    android:text="@string/sign_title"
    android:textColor="@android:color/black"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/bg_top"
    />



  <!--<Button
    style="?android:attr/borderlessButtonStyle"
    android:layout_width="160dp"
    android:layout_height="48dp"
    android:background="@drawable/bg_sign_up"
    android:drawableStart="@drawable/ic_google"
    android:drawablePadding="10dp"
    android:gravity="center_vertical"
    android:paddingStart="40dp"
    android:text="회원가입"
    />

  <Button
    style="?android:attr/borderlessButtonStyle"
    android:layout_width="160dp"
    android:layout_height="48dp"
    android:background="@drawable/bg_sign_in"
    android:drawableStart="@drawable/ic_google"
    android:drawablePadding="10dp"
    android:gravity="center_vertical"
    android:paddingStart="40dp"
    android:text="로그인"
    />-->

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="16dp"
    android:text="@string/sign_privacy"
    android:textSize="10sp"
    android:visibility="gone"
    app:layout_constraintBottom_toTopOf="@id/next"
    app:layout_constraintStart_toStartOf="parent"
    />

  <TextView
    android:id="@+id/next"
    style="?android:attr/borderlessButtonStyle"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="34dp"
    android:background="@drawable/bg_sign_in"
    android:gravity="center"
    android:text="시작하기"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_goneMarginEnd="16dp"
    />

  <TextView
    android:id="@+id/sign_up"
    style="?android:attr/borderlessButtonStyle"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="34dp"
    android:background="@drawable/bg_sign_up"
    android:drawableStart="@drawable/ic_google"
    android:drawablePadding="10dp"
    android:gravity="center_vertical"
    android:paddingStart="48dp"
    android:text="회원가입"
    android:visibility="gone"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/sign_in"/>

  <TextView
    android:id="@+id/sign_in"
    style="?android:attr/borderlessButtonStyle"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="34dp"
    android:background="@drawable/bg_sign_in"
    android:drawableStart="@drawable/ic_google"
    android:drawablePadding="10dp"
    android:gravity="center_vertical"
    android:paddingStart="54dp"
    android:text="로그인"
    android:visibility="gone"
    app:layout_constraintStart_toEndOf="@id/sign_up"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>