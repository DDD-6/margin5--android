<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="200dp"
  android:layout_height="match_parent"
  >

  <TextView
    android:id="@+id/name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textColor="#333333"
    android:textSize="16sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:text="투썩 점퍼 와인즈, 황소 오가닉모나스트렐  "
    />

  <TextView
    android:id="@+id/name_eng"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:textColor="#333333"
    android:textSize="10sp"
    app:layout_constraintTop_toBottomOf="@id/name"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:text="Tussock Jumper, Bull Organic Monastrell, 2020"
    />

  <TextView
    android:id="@+id/info_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:textSize="12sp"
    android:textColor="#333333"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@id/info_sub"
    tools:text="스페인  /  후미야  /  레드"/>

  <TextView
    android:id="@+id/info_sub"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textColor="#333333"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:text="17% / 750ml / 44,000원"/>
</androidx.constraintlayout.widget.ConstraintLayout>