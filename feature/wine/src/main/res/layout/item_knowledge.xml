<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="360dp"
  android:background="#333333"
  android:paddingStart="20dp"
  android:paddingTop="26dp"
  android:paddingEnd="34dp"
  android:paddingBottom="30dp"
  >

  <TextView
    android:id="@+id/circle_head"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_today_knowledge"
    android:text="오늘의\n지식"
    android:textColor="@android:color/white"
    android:textSize="16sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <TextView
    android:id="@+id/title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="4dp"
    android:textColor="@android:color/white"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/circle_head"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="테루아를 순수하게\n표현한 내추럴 와인"
    />

  <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="42dp"
    android:lineSpacingExtra="8dp"
    android:text="@string/today_knowledge_sample"
    android:textColor="@android:color/white"
    android:textSize="12sp"
    app:layout_constraintEnd_toEndOf="@id/title"
    app:layout_constraintStart_toStartOf="@id/title"
    app:layout_constraintTop_toBottomOf="@id/title"
    />


</androidx.constraintlayout.widget.ConstraintLayout>