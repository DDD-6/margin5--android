<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="TextWineDetailHead">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">14dp</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">#333333</item>
  </style>

  <style name="TextWineDetailBody">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginEnd">16dp</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">#333333</item>
  </style>

  <style name="TextWineDetailTasteHead">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">10sp</item>
    <item name="android:textColor">#333333</item>
  </style>

  <style name="TextWineDetailTasteBody">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">16dp</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">#333333</item>
  </style>

  <style name="TextWineDetailTasteDivider">
    <item name="android:layout_width">0.5dp</item>
    <item name="android:layout_height">8.5dp</item>
    <item name="android:background">#d6d6d6</item>
  </style>

  <style name="DividerWineDetail">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0.5dp</item>
    <item name="android:layout_marginTop">14dp</item>
    <item name="android:layout_marginStart">20dp</item>
    <item name="android:layout_marginEnd">20dp</item>


    <item name="android:background">#d6d6d6</item>
  </style>

</resources>