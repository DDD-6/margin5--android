<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  >

  <TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:textColor="#333333"
    android:textSize="12sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/one"
    app:layout_constraintBottom_toBottomOf="@id/one"
    tools:text="강도"
    />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.15"/>

  <TextView
    android:id="@+id/one"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:background="#f5f5f5"
    android:gravity="center"
    android:text="1"
    app:layout_constraintHorizontal_chainStyle="spread"
    app:layout_constraintStart_toEndOf="@id/guideline"
    app:layout_constraintEnd_toStartOf="@id/two"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />
  <TextView
    android:id="@+id/two"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:background="#f5f5f5"
    android:gravity="center"
    android:text="2"
    app:layout_constraintStart_toEndOf="@id/one"
    app:layout_constraintEnd_toStartOf="@id/three"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <TextView
    android:id="@+id/three"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:background="#f5f5f5"
    android:gravity="center"
    android:text="3"
    app:layout_constraintStart_toEndOf="@id/two"
    app:layout_constraintEnd_toStartOf="@id/four"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <TextView
    android:id="@+id/four"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:background="#f5f5f5"
    android:gravity="center"
    android:text="4"
    app:layout_constraintStart_toEndOf="@id/three"
    app:layout_constraintEnd_toStartOf="@id/five"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <TextView
    android:id="@+id/five"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:background="#f5f5f5"
    android:gravity="center"
    android:text="5"
    app:layout_constraintStart_toEndOf="@id/four"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <TextView
    android:id="@+id/start_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:text="Light"
    android:textSize="8sp"
    app:layout_constraintStart_toStartOf="@id/one"
    app:layout_constraintEnd_toEndOf="@id/one"
    app:layout_constraintTop_toBottomOf="@id/one"
    />

  <TextView
    android:id="@+id/end_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:text="Bold"
    android:textSize="8sp"
    app:layout_constraintStart_toStartOf="@id/five"
    app:layout_constraintEnd_toEndOf="@id/five"
    app:layout_constraintTop_toBottomOf="@id/five"
    />

</androidx.constraintlayout.widget.ConstraintLayout>